<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_analytic_account_form_blocker" model="ir.ui.view">
        <field name="name">analytic.account.block.form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <group name="group_account_information" position="after">
                <field name="is_blocked"/>
            </group>
        </field>
    </record>

    <!-- Modificación de la vista de búsqueda de cuentas analíticas -->
    <record id="view_analytic_account_search_blocker" model="ir.ui.view">
        <field name="name">analytic.account.block.search</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_filter"/>
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="attributes">
                <attribute name="domain">[('is_blocked', '=', False)]</attribute>
            </field>
        </field>
    </record>
</odoo>
